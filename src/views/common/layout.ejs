      }

      .nav__link {
        padding: 0;
        margin-top: 14px;
        list-style: none;
        font-family: 'Montserrat', sans-serif;
      }
      .nav__link li {
        display: inline-block;
        padding: 0px 10px;
        font-size: 17px;
      }
      .nav__link li a {
        text-decoration: none;
        color: black;
        transition: all 0.3s ease 0s;
      }

      .nav__link li a:hover {
        color: purple;
      }
    </style>
