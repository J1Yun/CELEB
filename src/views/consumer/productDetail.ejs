<link rel="stylesheet" href="/css/productDetail.css" />

<section class="py-5">
  <div class="container px-4 px-lg-5 my-5 rounded" style="background-color: white">
    <div class="row gx-4 gx-lg-5 align-items-top">
      <h2 id="productName">
        <a href="/store/1"><i class="far fa-arrow-alt-circle-left"></i></a><b>빈티지 케이크</b>
      </h2>
      <div class="col-md-8">
        <!--이미지-->
        <div class="card mb-3">
          <img src="/img/ex-cake4.jpg" class="card-img-top" alt="..." />
        </div>
        <div class="card mx-auto">
          <div class="card-header">주문시 유의사항</div>
          <div class="card-body">
            <p class="card-text">판매자의 유의사항</p>
          </div>
        </div>
        <div class="card mx-auto">
          <div class="card-header">상품 상세보기</div>
          <div class="card-body slide-image">
            <div><img src="/img/ex-cake1.png" /></div>
            <div><img src="/img/ex-cake2.png" /></div>
            <div><img src="/img/ex-cake3.png" /></div>
          </div>
        </div>
      </div>
      <div class="col-md-4">
        <div class="option-section">
          <h3>사이즈 선택</h3>
          <div class="form-check">
            <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault1" />
            <label class="form-check-label" for="flexRadioDefault1"> 1호 </label>
            <span class="text-end">+3000원</span>
          </div>
          <div class="form-check">
            <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault2" checked />
            <label class="form-check-label" for="flexRadioDefault2"> 2호 </label>
            <span class="text-end">+0원</span>
          </div>
        </div>
        <div class="option-section">
          <h3>디자인</h3>
          <div class="input-group">
            <span class="input-group-text">배경색</span>
            <input type="color" class="form-control form-control-color" id="exampleColorInput" value="#563d7c" title="Choose your color" />
            <span class="text-end">+3000원</span>
          </div>
          <div class="input-group">
            <span class="input-group-text">글씨색</span>
            <input class="form-control" aria-label="With textarea" />
          </div>
        </div>
        <div class="option-section">
          <h3>추가 요청사항 (선택)</h3>
          <div class="input-group">
            <span class="input-group-text">요청사항</span>
            <textarea class="form-control" aria-label="With textarea"></textarea>
          </div>
          <div class="input-group mb-3">
            <label class="input-group-text" for="inputGroupFile01">도안</label>
            <input type="file" class="form-control" id="inputGroupFile01" />
          </div>
        </div>
        <div>
          <h2>픽업 날짜 설정</h2>
          <input id="datepicker" width="276" />
          <script>
            $('#datepicker').datepicker({
              uiLibrary: 'bootstrap4',
              disabled: ['2021-10-10'],
            });
          </script>
        </div>
        <div class="d-grid mx-auto" style="margin-bottom: 5%">
          <button class="btn btn-outline-success" type="submit" value="Submit">주문하기</button>
        </div>
      </div>
    </div>
  </div>
</section>

<script type="text/javascript">
  $('.slide-image').slick({
    infinite: true,
    slidesToShow: 3,
    slidesToScroll: 3,
  });
</script>
